mensaje_global = "Hola como estás?"

def saludar(nombre, edad=18):  
    
    mensaje_local = f"Hola {nombre}, tienes {edad} años."
    print(mensaje_local)  

def sumar(a, b):
    resultado = a + b
    return resultado  

saludar("Kevin", 25)              
saludar(nombre="Laura")           

total = sumar(10, 20)
print(f"La suma es: {total}")

print(mensaje_global)
